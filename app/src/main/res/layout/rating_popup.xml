<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cabme_accent_yellow">


    <TextView
        android:id="@+id/rating_popup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/textColorSecondary"
        android:text="Rate Driver"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/cabme_accent_yellow">

        <ImageButton
            android:id="@+id/thumb_up_popup"
            android:layout_width="135dp"
            android:layout_height="107dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_thumbs_up_100px"
            android:background="@color/fui_transparent" />

        <ImageButton
            android:id="@+id/thumbs_down_popup"
            android:layout_width="135dp"
            android:layout_height="107dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_thumbs_down_100px"
            android:background="@color/fui_transparent"/>

    </LinearLayout>



</LinearLayout>